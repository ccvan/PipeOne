/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow config file for use with Docker
 * -------------------------------------------------
 * Defines basic usage limits and docker image id.
 * Imported under the default 'docker' Nextflow
 * profile in nextflow.config
 * NOTE: Not suitable for production use, assumes
 * compute limits of only 16GB memory and 1 CPU core.
 */

process.container = 'nongbaoting/pipeone:latest'

docker {
  enabled = true
  autoMounts =true
}

params {
	GenomeAnalysisTK = "/root/miniconda3/envs/gatk3.8/opt/gatk-3.8/GenomeAnalysisTK.jar"
  annovar_BinDir  = "/opt/annovar/"
  cpatpath = "/opt/CPAT-1.2.4/"
}